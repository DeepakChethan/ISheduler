<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.teamnotfoundexception.impetus.fragments.TimerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:id="@+id/really"
        android:layout_margin="7dp"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="top"
        android:padding="20dp"
        app:cardElevation="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="11dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EventName"
                android:textAlignment="center"
                android:id="@+id/foEventNameHolder"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/foClock"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="TIMER" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Team Count"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:gravity="end"
                    android:id="@+id/teamCountContainer"
                    android:layout_gravity="end"
                    android:layout_height="match_parent"
                    android:text="Some detail"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/teamCountHolder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="some"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/really"

        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/textStyle"
                android:layout_height="wrap_content"
                android:text="Event Type :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dinkachika"
                style="@style/textStyle"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/eventTypeContainer"
                />
        </LinearLayout>

        <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/textStyle"
            android:layout_height="wrap_content"
            android:text="Event Location :"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mane"
            style="@style/textStyle"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:gravity="end"
            android:id="@+id/eventLocationContainer"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/textStyle"
                android:layout_height="wrap_content"
                android:text="Team members :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2"
                style="@style/textStyle"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/maxTeamMemberContainer"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/textStyle"
                android:layout_height="wrap_content"
                android:text="Ticket Cost :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20"
                style="@style/textStyle"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/ticketCostContainer"
                />

        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
</FrameLayout>
